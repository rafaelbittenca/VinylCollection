							<br>
							<br>
							<div class="">
								<a id="link-about" class="btn btn-custom btn-laranja btn-lg page-scroll" href="@Url.Action("Index", "Artist")">Show Me</a>
							</div>
						</div>
					</div><!-- /header-text -->
				</div>
				<div class="item">
					<img src="~/Content/img/carousel/slide2.jpg" />
					<div class="header-text hidden-xs">
						<div class="col-md-12 text-center intro-text">
							<span class="intro-lead-in">Welcome To My Collection!</span>
							<br>
							<br>
							<div class="">
								<a id="link-about" class="btn btn-custom btn-laranja btn-lg page-scroll" href="@Url.Action("Index", "Artist")">Show Me</a>
							</div>
						</div>
					</div><!-- /header-text -->
				</div>
				<div class="item">
					<img src="~/Content/img/carousel/slide3.jpg" />
					<div class="header-text hidden-xs">
						<div class="col-md-12 text-center intro-text">
							<span class="intro-lead-in">Welcome To My Collection!</span>
							<br>
							<br>
							<div class="">
								<a id="link-about" class="btn btn-custom btn-laranja btn-lg page-scroll" href="@Url.Action("Index", "Artist")">Show Me</a>
							</div>
						</div>
					</div><!-- /header-text -->
				</div>
			</div>
			<!-- Carousel controls -->
			<a class="carousel-control left" href="#myCarousel" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left"></span>
			</a>
			<a class="carousel-control right" href="#myCarousel" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right"></span>
			</a>
		</div>
	</header>
